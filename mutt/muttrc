
# Caches
set header_cache=~/.mutt/cache/headers
set message_cachedir=~/.mutt/cache/bodies
set certificate_file=~/.mutt/certificates

# Useful customizations
set smart_wrap = yes
set sort = 'threads'
set sort_aux = 'last-date-received'
set imap_check_subscribed
#
ignore "Authentication-Results:"
ignore "DomainKey-Signature:"
ignore "DKIM-Signature:"
hdr_order Date From To Cc
#

set timeout=60  #Check for mail every minute
set mail_check=5

# Use poor man's password keeping, as per Arch Linux manual
source "gpg2 -dq $HOME/.my-pwds.gpg |"


## ACCOUNT1
source "~/.mutt/gmail"
folder-hook $folder 'source ~/.mutt/gmail'

## ACCOUNT2
source "~/.mutt/outlook"
folder-hook $folder 'source ~/.mutt/outlook'

## Shortcuts
macro index,pager <f2> '<sync-mailbox><enter-command>source ~/.mutt/gmail<enter><change-folder>!<enter>'
macro index,pager <f3> '<sync-mailbox><enter-command>source ~/.mutt/nusstu<enter><change-folder>!<enter>'
macro index,pager <f4> '<sync-mailbox><enter-command>source ~/.mutt/nusstf<enter><change-folder>!<enter>'
macro index,pager <f5> '<sync-mailbox><enter-command>source ~/.mutt/outlook<enter><change-folder>!<enter>'

mailboxes

# Editor Information
set editor=vim

# Use a colour theme
source ~/.mutt/mutt-colors-solarized-dark-256.muttrc

# Try to view text/plain first
alternative_order text/plain text/html

# In case that files
macro attach 'V' "<pipe-entry>cat >~/.cache/mutt/mail.html && $BROWSER ~/.cache/mutt/mail.html && rm ~/.cache/mutt/mail.html<enter>"
