# Connection
unset ssl_starttls
set ssl_force_tls=yes
unset ssl_use_sslv3


## Receive options.
set imap_user=richard.goulter
set imap_pass=$my_gmail_pass

set folder=imaps://richard.goulter@imap.gmail.com/
unset mbox
set postponed=+Drafts
set spoolfile=+INBOX
set record=+Sent
#
unset imap_check_subscribed
unset imap_passive


## Send options.
set realname="Richard Goulter"
set from=richard.goulter@gmail.com
#
###
#
#
#
set smtp_url="smtps://$imap_user:$imap_pass@smtp.gmail.com"
set hostname="gmail.com"


## Hook -- IMPORTANT!
account-hook $folder "set imap_user=$imap_user imap_pass=$imap_pass"
