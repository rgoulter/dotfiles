# Connection
set ssl_starttls=yes
set ssl_force_tls=yes
set ssl_use_sslv3=yes


# Incoming
set imap_user="richard.goulter@windowslive.com"
set imap_pass=$my_outlook_pass

set folder="imaps://imap-mail.outlook.com:993"
set mbox="+INBOX"
set postponed="+Drafts"
set spoolfile="+INBOX"
set record="+Sent Items"
# set trash="+Deleted Items"
set imap_check_subscribed
unset imap_passive


# Outgoing
set realname="Richard Goulter"
# set from="dcsrjpg@nus.edu.sg"
# set smtp_user=nusstf\dcsrjpg
set smtp_pass=$my_outlook_pass
#
set smtp_authenticators="login"
#? smtp_auth means we use smtp_pass?
set smtp_url="smtp://$imap_user@smtp-mail.outlook.com:25"
unset hostname


## Hook -- IMPORTANT!
account-hook $folder "set imap_user=$imap_user imap_pass=$imap_pass"
